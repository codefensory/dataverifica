datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int                @id @default(autoincrement())
  username         String
  password         String
  ruc              String?
  companyName      String?
  phone            String?
  email            String?
  createdAt        DateTime           @default(now())
  deleteAt         DateTime?
  isAdmin          Boolean            @default(false)
  InformationOrder InformationOrder[]
}

model InformationOrder {
  id                 Int                 @id @default(autoincrement())
  personType         PersonType?
  documentType       PersonDocumentType?
  documentNumber     String?
  name               String?
  requestInformation String?
  isComplete         Boolean             @default(false)
  PDF                PDF?                @relation(fields: [pdfId], references: [id])
  User               User                @relation(fields: [userId], references: [id])
  BulkFile           BulkFile?           @relation(fields: [bulkFileId], references: [id])
  createdAt          DateTime            @default(now())
  userId             Int
  pdfId              Int?
  bulkFileId         Int?
}

model PDF {
  id               Int                @id @default(autoincrement())
  path             String
  name             String
  createdAt        DateTime           @default(now())
  deleteAt         DateTime?
  InformationOrder InformationOrder[]
}

model BulkFile {
  id               Int                @id @default(autoincrement())
  path             String
  name             String
  createdAt        DateTime           @default(now())
  deleteAt         DateTime?
  InformationOrder InformationOrder[]
}

enum PersonType {
  Natural
  Juridical
}

enum PersonDocumentType {
  DNI
  RUC
}
